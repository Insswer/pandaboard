# Description: Access Control Lists library
# URL: http://savannah.nongnu.org/projects/acl

name=acl
version=2.2.51
release=1
source=(http://mirrors.zerg.biz/nongnu/$name/$name-$version.src.tar.gz)
depends=cross/attr

build() {
  cd $name-$version

  ./configure --build=$BUILD \
              --host=$HOST \
              --prefix=/usr \
              --libexecdir=/usr/lib

  make -j $JOBS
  make DIST_ROOT=$PKG install install-lib install-dev 

  rm -r $PKG/usr/share/{doc,locale}

  # Fix .la files
  find $PKG -name "*.la" -exec sed -i -e "s;/usr;$CROSS_SYSROOT/usr;g" "{}" \;
}
