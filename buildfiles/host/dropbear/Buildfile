# Description: Small and secure SSH server and client
# URL:         http://matt.ucc.asn.au/dropbear/dropbear.html
# Builder:     Martin Lund <martin@martinlund.org>

name=dropbear
version=2012.55
release=1
source=(http://matt.ucc.asn.au/$name/releases/$name-$version.tar.gz \
        $name)
depends=host/zlib

build () {
    cd $name-$version

    sed -i 's|libexec|lib/ssh|; s|X11R6/bin|bin|' options.h
    CC=$HOST-gcc ./configure --prefix=/usr \
                             --build=$BUILD \
                             --host=$HOST
    make
    make DESTDIR=$PKG install
    install -d $PKG/{etc/{rc.d,dropbear},usr/share/man/man{1,8}}
    install -m 755 $SRC/dropbear $PKG/etc/rc.d
    install -m 644 dbclient.1 $PKG/usr/share/man/man1
    install -m 644 dropbear{.8,key.8} $PKG/usr/share/man/man8
}

