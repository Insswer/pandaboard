# Buildfiles tool and library check (build system)

# Tool check mechanism
check_tool() {
   type $1 &> /dev/null
   if [ $? != 0 ]; then
      echo "Failed ('$1' is not found)"
      exit 1
   fi
}

# Check for tools or libraries that are required 
# to be pre-installed on build system.
check_tool mkfs.jffs2
#check_lib
