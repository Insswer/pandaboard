# Check for tools and libraries required
# to be pre-installed on build system.

# Tool check mechanism
check_tool() {
   type $1 &> /dev/null
   if [ $? != 0 ]; then
      echo "Failed ('$1' is not found)"
      exit 1
   fi
}

# Required by cross/fs
check_tool mkfs.jffs2

# Required by cross/groff
check_tool grn

#check_lib
