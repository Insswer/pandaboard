# Check for tools and libraries required
# to be pre-installed on build system.

# Tool check function
check_tool()
{
   type $1 &> /dev/null
   if [ $? != 0 ]; then
      echo "Failed ('$1' is not found)"
      exit 1
   fi
}

# Library check function
check_lib()
{
   test -e $1 &> /dev/null
   if [ $? != 0 ]; then
      echo "Failed ('$1' is not found)"
      exit 1
   fi
}

# Tool checks
check_tool mkfs.jffs2  # Required by cross/fs
check_tool grn         # Required by cross/groff

# Library checks
#check_lib /usr/lib/libfoo.so.1.0.?.?  # Required by native/friend
